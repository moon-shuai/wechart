<!--pages/login/login.wxml-->

<view class='login'>
  <view class="section">
    <input placeholder="手机号" maxlength="11" bindinput="getTel" value="{{telvalue}}" type="number" cursor="{{12}}"  />
    <text wx:if = "{{telflag}}" bindtap='clearTel'>×</text>
  </view>

  <view class="section">
    <input placeholder='密码' maxlength='11' bindinput="getpwd" password='{{ true }}'
    value='{{pwdvalue}}'/>
    <text wx:if = "{{pwdflag}}" bindtap='clearpwd'>×</text>
  </view>

  <button class="btn" bindtap="login">登录</button>
  <view class="tip" wx:if = "tipflag">{{tip}}</view>
  <!-- <button class="kf_button" open-type="contact" session-from="weapp">
    <image src='/resources/more.png'/>
  </button> -->
</view>

